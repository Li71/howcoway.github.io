@model goshopping.Models.cvmLogin

@{
    ViewBag.Title = "會員登入";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="margin-top:15vh; max-width:380px;">
        <h4 style="text-align:center;">會員登入</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.UserNo, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.UserNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="checkbox">
                    @Html.LabelFor(model => model.Remember, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Remember)
                    @Html.ValidationMessageFor(model => model.Remember, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入系統" class="btn btn-primary" />
                @Html.ActionLink("註冊帳號", "Create", "User", null, new { @class = "btn btn-info" })
                @Html.ActionLink("返回首頁", "Index", "Home", null, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}
